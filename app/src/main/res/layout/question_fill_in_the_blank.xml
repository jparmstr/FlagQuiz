<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/question_fill_in_the_blank_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="This is the flag of which country?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- The flag image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/fillInTheBlankQuestion_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/af" />

    </LinearLayout>

    <EditText
        android:id="@+id/fillInTheBlankQuestion_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        android:hint="Fill in the blank"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:singleLine="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="#000000" />

</LinearLayout>